<p>Add Product</p>
<% if @product.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@product.errors.count, "error") %> prohibited this article from being saved:</h2>
 
    <ul>
    <% @product.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_tag "/products", method: :post do%>
  <div>
    <p>Product Name:</p> <input type="text" value = "<%= @product.name %>" name="name">
    <p>Price:</p> <input type="text" value = "<%= @product.price %>" name="price">
    <p>Description:</p> <input type="text" value = "<%= @product.description %>" name="description">
    <!-- <p>Supplier Id:</p> <input type="text" value = "<%= @product.supplier_id %>" name="supplier_id"> -->
    <p>Select Supplier ID</p>
    <select name="supplier_id">
    <% Supplier.all.each do |supplier| %>
      <option value="<%= supplier.id %>"><%= supplier.name %></option>
    <% end %>
    </select>
  <div>
  <input type="submit">
  <%end%>