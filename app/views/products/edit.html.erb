<p>Edit Product</p>
<!-- Show Validation Errors When Editing -->
<% if @product.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@product.errors.count, "error") %> prohibited this article from being saved:</h2>
 
    <ul>
    <% @product.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<!-- End -->
<%= form_tag "/products/#{@product.id}", method: :patch do%>
  <div>
    <p>Product Name:</p> <input type="text" name="name" value="<%= @product.name %>">
    <p>Price:</p> <input type="text" name="price" value="<%= @product.price %>">
    <p>Description:</p> <input type="text" name="description" value="<%= @product.description %>">
    <p>Image:</p> <input type="text" name="image" value="<%= @product.images %>">
    <p>Select Supplier ID</p>
    <select name="supplier_id">
    <% Supplier.all.each do |supplier| %>
      <option value="<%= supplier.id %>"><%= supplier.name %></option>
    <% end %>
    </select>
  <div>
  <input type="submit">
  <%end%>